<div class="box">
  <% provide :title, 'ログイン' %>
  <% content_for :head do %>
    <meta name="description" content="素敵なモノと出会える場所。楽天でお買い物し
  ませんか？ログインして楽天市場を覗いてみましょう。">
  <% end %>
  <div class="box-inner">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="submit-group">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>